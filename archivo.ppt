-- Crear una base de datos
CREATE DATABASE Colegio;

-- Usar la base de datos
USE Colegio;

-- Crear una tabla de estudiantes
CREATE TABLE Estudiantes (
    id_estudiante INT PRIMARY KEY AUTO_INCREMENT,
    nombre VARCHAR(100),
    apellido VARCHAR(100),
    edad INT,
    grado VARCHAR(20)
);

